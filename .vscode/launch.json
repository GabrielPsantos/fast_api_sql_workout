    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 8000,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.api.main:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}